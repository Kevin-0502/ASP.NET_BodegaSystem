@model IEnumerable<BodegaSystem.Models.MovimientoInventario>

@{
    ViewData["Title"] = "Movimientos de Bodega";
}

<h1>Entradas y Salidas</h1>

<p>
    <a asp-action="Create">Registrar nuevo movimiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMovimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMovimiento)
            </td>
                
            <td>
                <!-- 
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> ||
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    -->
                <a asp-action="Details" asp-route-id="@item.Id">Ver detalles de movimiento</a> 
            </td>
                
        </tr>
}
    </tbody>
</table>
